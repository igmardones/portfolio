---
import Layout from "../layouts/Layout.astro";
import Carnet from "../components/ui/Carnet.astro";

import SocialLinks from "../components/ui/SocialLinks.astro";
---

<Layout title="igmardones">
  <main class="flex-grow max-w-8xl mx-auto p-4">
    <div>
      <h1
        class="text-transparent bg-clip-text bg-gradient-to-r from-sky-700 to-slate-300 text-4xl sm:text-6xl lg:text-8xl font-black text-center mt-2 sm:mt-16 uppercase"
      >
        Ignacio
      </h1>
      <h1
        class="text-transparent bg-clip-text bg-gradient-to-r from-sky-700 to-slate-300 text-4xl sm:text-6xl lg:text-8xl font-black text-center uppercase border-teal-100"
      >
        Mardones Rivera
      </h1>
    </div>
    <div class="mb-10">
      <Carnet />
    </div>
    <div>
      <SocialLinks />
    </div>
  </main>
</Layout>
